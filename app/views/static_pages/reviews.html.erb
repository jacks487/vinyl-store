<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Reviews</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<% provide(:title, "Reviews") %>
<h3>Reviews</h3>
<p>Please log in to leave a review.</p>
	
<% end %>